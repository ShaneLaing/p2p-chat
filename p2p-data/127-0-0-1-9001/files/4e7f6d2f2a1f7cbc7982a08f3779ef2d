CREATE TABLE IF NOT EXISTS `club_members` (
    `id` INTEGER PRIMARY KEY AUTOINCREMENT,
    `name` TEXT NOT NULL UNIQUE
);

CREATE TABLE IF NOT EXISTS `dispatch_statistics` (
    `id` INTEGER PRIMARY KEY AUTOINCREMENT,
    `name` TEXT NOT NULL,
    `w1_dispatch_count` INTEGER NOT NULL,
    `w2_dispatch_count` INTEGER NOT NULL,
    `w3_dispatch_count` INTEGER NOT NULL,
    `w4_dispatch_count` INTEGER NOT NULL,
    `w5_dispatch_count` INTEGER NOT NULL,
    `total_dispatches` INTEGER NOT NULL,
    `number_of_interested_persons` INTEGER NOT NULL,
    `number_of_sign_ups` INTEGER NOT NULL,
    `verbal_admission_to_membership` INTEGER NOT NULL,
    `admission_with_fee_paid` INTEGER NOT NULL,
    `total_admissions` INTEGER NOT NULL
);

CREATE TABLE IF NOT EXISTS `events_definition` (
    `id` INTEGER PRIMARY KEY AUTOINCREMENT,
    `event_name` TEXT NOT NULL,
    `event_date` TEXT NOT NULL,
    `form_link` TEXT NOT NULL,
    `current_registration_count` INTEGER NOT NULL,
    `registration_limit` INTEGER NOT NULL
);

CREATE TABLE IF NOT EXISTS `time_definition` (
    `id` INTEGER PRIMARY KEY AUTOINCREMENT,
    `week` INTEGER NOT NULL,
    `start_date` TEXT NOT NULL,
    `end_date` TEXT NOT NULL
);

CREATE TABLE IF NOT EXISTS `root_table` (
    `id` INTEGER PRIMARY KEY AUTOINCREMENT,
    `state` TEXT NOT NULL,
    `interested_persons` TEXT NOT NULL,
    `referrer1` TEXT NOT NULL,
    `referrer2` TEXT NOT NULL,
    `referrer3` TEXT NOT NULL,
    `duplicate_list` TEXT NOT NULL,
    `referral_date` TEXT NOT NULL,
    `referral_type` TEXT NOT NULL,
    `department` TEXT NOT NULL,
    `note` TEXT NOT NULL,
    `contact` TEXT NOT NULL,
    `birthday` TEXT NOT NULL,
    `join_date` TEXT NOT NULL,
    `event` TEXT NOT NULL
);

-- Foreign keys are not strictly enforced in SQLite unless PRAGMA foreign_keys=ON, and only work if types match.
-- For simplicity, we skip foreign key constraints in this schema.