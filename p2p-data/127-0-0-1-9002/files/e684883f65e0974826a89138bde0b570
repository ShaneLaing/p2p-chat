#include <bits/stdc++.h>

using namespace std;
using ll = long long;

struct Group {
    ll l, r, w;

    bool operator<(const Group &other) const {
        if (r != other.r) return r < other.r;
        return l < other.l;
    }
};

vector<Group> g;

struct BIT {
    vector<ll> bit;
    ll n;
    BIT(ll n) : n(n), bit(n + 1, 0) {}

    void update(int i, ll v) {
        for (; i <= n; i += (i & -i)) {
            bit[i] = max(bit[i], v);
        }
    }

    ll query(int i) {
        ll res = 0;
        for (; i >= 1; i -= (i & -i)) {
            res = max(res, bit[i]);
        }

        return res;
    }
};



int main() {
    int n; cin >> n;
    vector<ll> coords;


    for (int i = 1; i <= n; i++) {
        ll l, r, w; cin >> l >> r >> w;
        g.push_back({l, r, w});
        coords.push_back(l);
        coords.push_back(r);
    }
    sort(coords.begin(), coords.end());
    coords.erase(unique(coords.begin(), coords.end()), coords.end());

    auto getID = [&](ll x) {
        return int(lower_bound(coords.begin(), coords.end(), x) - coords.begin() + 1);
    };

    for (int i = 0; i < n; i++) {
        g[i].l = getID(g[i].l);
        g[i].r = getID(g[i].r);
    }

    sort(g.begin(), g.end());


    BIT bit(coords.size() + 1);
    ll ans = 0;


    for (auto &it : g) {
        ll best = bit.query(it.l - 1) + it.w;
        bit.update(it.r, best);

        ans = max(ans, best);
    }

    cout << ans;
    

    return 0;
}