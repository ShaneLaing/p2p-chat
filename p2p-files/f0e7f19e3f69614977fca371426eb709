#include <bits/stdc++.h>

using namespace std;
using ll = long long;


int main() {
    int n; cin >> n;

    priority_queue<ll, vector<ll>, greater<>> pq;

    for (int i = 0; i < n; i++) {
        ll f; cin >> f;
        pq.push(f);
    }

    ll total_cost = 0;

    while (pq.size() > 1) {
        ll a = pq.top(); pq.pop();
        ll b = pq.top(); pq.pop();
        ll merge_cost = a + b;

        total_cost += merge_cost;
        pq.push(merge_cost);
    }

    cout << total_cost << '\n';
    return 0;
}